<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/picture_view"
    android:paddingBottom="3dip"
    android:paddingLeft="3dip">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ListCover"
                android:layout_width="40dp"
                android:layout_height="40dp"
                fresco:progressBarImage="@drawable/circle"
                fresco:progressBarAutoRotateInterval="3000"
                fresco:progressBarImageScaleType="fitCenter"
                fresco:roundAsCircle="true"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="#000000"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:id="@+id/ItemTitle"
                    android:textSize="16dip"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"></TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:id="@+id/ItemTime"
                    android:textSize="10dip"
                    android:textColor="#65d87a" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/ItemText"
            android:textSize="15dip"
            android:text="adadfafdadfa\naaaaaaaaaaanaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaaaaaanaaaaaaaanaaaaaaaaaaaanaaaa"
            android:textColor="#000000"></TextView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/PictureField">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/Line1">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/PIC11"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    fresco:progressBarImage="@drawable/circle"
                    fresco:progressBarAutoRotateInterval="3000"
                    fresco:progressBarImageScaleType="fitCenter" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/PIC12"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    fresco:progressBarImage="@drawable/circle"
                    fresco:progressBarAutoRotateInterval="3000"
                    fresco:progressBarImageScaleType="fitCenter" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/PIC13"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    fresco:progressBarImage="@drawable/circle"
                    fresco:progressBarAutoRotateInterval="3000"
                    fresco:progressBarImageScaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Line2">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/PIC21"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    fresco:progressBarImage="@drawable/circle"
                    fresco:progressBarAutoRotateInterval="3000"
                    fresco:progressBarImageScaleType="fitCenter" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/PIC22"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    fresco:progressBarImage="@drawable/circle"
                    fresco:progressBarAutoRotateInterval="3000"
                    fresco:progressBarImageScaleType="fitCenter" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/PIC23"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    fresco:progressBarImage="@drawable/circle"
                    fresco:progressBarAutoRotateInterval="3000"
                    fresco:progressBarImageScaleType="fitCenter" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Line3">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/PIC31"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    fresco:progressBarImage="@drawable/circle"
                    fresco:progressBarAutoRotateInterval="3000"
                    fresco:progressBarImageScaleType="fitCenter" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/PIC32"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    fresco:progressBarImage="@drawable/circle"
                    fresco:progressBarAutoRotateInterval="3000"
                    fresco:progressBarImageScaleType="fitCenter" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/PIC33"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    fresco:progressBarImage="@drawable/circle"
                    fresco:progressBarAutoRotateInterval="3000"
                    fresco:progressBarImageScaleType="fitCenter" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>